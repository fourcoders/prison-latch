{% trans_default_domain 'FOSUserBundle' %}

<form id="register" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">

		{{ form_errors(form) }}

	    {{ form_errors(form.email) }}
        {{ form_widget(form.email, {'attr': {'placeholder': 'email'}}) }}
        {{ form_errors(form.username) }}
        {{ form_widget(form.username, {'attr': {'placeholder': 'username'}}) }}
        {{ form_errors(form.plainPassword.first) }}
        {{ form_widget(form.plainPassword.first, {'attr': {'placeholder': 'password'}}) }}
        {{ form_errors(form.plainPassword.second) }}
        {{ form_widget(form.plainPassword.second, {'attr': {'placeholder': 'repeat password'}}) }}
        {{ form_rest(form) }}
        <div id="start">
        	<input type="submit" value="Registrarse">
        </div>

</form>

{% block javascripts %}
<script type="text/javascript">
    $(function(){
        $('#submitregister').click(function (e){
            $('.fos_user_registration_register').submit()
        });
    });
</script>
{% endblock %}  